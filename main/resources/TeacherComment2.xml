<page title="بهشترأی" scrollable="true" toolbarColor="#1E90FF" statusbarColor="#4682B4" padding_top="64">


    <!--    <frame>-->
    <!--        <image src="{{image_url}}" borderCornerRadius="120" height="164"-->
    <!--               width="164"/>-->
    <!--    </frame>-->

        <frame>
            <text gravity="center" id="pro_name" textsize="28" margin_bottom="0" text="{{teacher_name}}"/>
        </frame>

        <frame>
            <text gravity="center" id="group" textsize="14" textcolor="gray" margin_top="0" text="{{lesson_name}}"/>
        </frame>




    <frame layout="linear_vertical" margin_left="-1" margin_right="-1">
        <frame layout="linear_horizontal">
            <frame textcolor="#fff" background="#FFFAFA" gravity="center" id="" onClick="update/teacherScoresTab">
                <text textsize="12" gravity="center" textcolor="black">امتیازات</text>
            </frame>
            <frame textcolor="#fff" background="#FFFAFA" gravity="center" id="" onClick="update/teacherInformationTab">
                <text textsize="12" gravity="center" textcolor="black">اطلاعات استاد</text>
            </frame>
            <frame textcolor="#fff" background="#FFFAFA" gravity="center" id="" onClick="update/teacherCommentsTab">
                <text textsize="12" gravity="center" textcolor="#1E90FF">نظرات</text>
            </frame>
        </frame>
        <divider color="#fff" size="2"/>
    </frame>

    <divider width="5" background="#FFFFFF" margin_bottom="100" padding_bottom="10"/>

    <frame padding_bottom="10"/>

    <frame layout="linear_vertical" width="200" gravity="left">
        <frame layout="linear_horizontal" gravity="left">
            <frame>
                <button gravity="center" onClick="update/last_comments_teacher" borderCornerRadius="100" background="#87CEEB" width="100"
                        textcolor="white" padding="40" textsize="12" height="40">آخرین
                </button>
            </frame>
            <frame>
                <button gravity="center" onClick="update/best_comments_teacher" borderCornerRadius="100" background="#1E90FF" width="100"
                        textcolor="white" padding="40" textsize="12" height="40">مفیدترین
                </button>
            </frame>
        </frame>
    </frame>

    <frame padding_bottom="10"/>


    <divider color="#DCDCDC" size="1"/>

    {{#feedbacks}}

    <frame layout="linear_vertical">

        <frame layout="linear_horizontal">


            <frame>

                <frame>
                    <button gravity="center" onClick="update/upvote_comment_teacher+{{feedback_id}}" borderCornerRadius="100" background="#228B22" width="30"
                            textcolor="white" textsize="14" height="40" text="{{upvotes}}">
                    </button>
                </frame>


                <frame>
                    <button gravity="center" onClick="update/downvote_comment_teacher+{{feedback_id}}" borderCornerRadius="100" background="#FF0000" width="30"
                            textcolor="white" textsize="14" height="40" text="{{downvotes}}">
                    </button>
                </frame>

            </frame>


            <frame>
                <text textalignment="right" gravity="right" width="60" textsize="12" text="نمره دانشجو:{{student_score}}"/>

                <text textalignment="right" gravity="right" width="60" textsize="12" text="تاریخ:{{date_number}}"/>

            </frame>


        </frame>
    </frame>


    <frame gravity="right">
        <text textalignment="right" textsize="16" gravity="left" text="{{extended_feedback}}"/>
    </frame>

    <divider color="#DCDCDC" size="1"/>

    {{/feedbacks}}






    <frame padding_bottom="10"/>

    <frame>
        <button height="50" width="100" padding="35" background="#225ab4" textsize="14" gravity="center"
                textcolor="#fff" borderCornerRadius="5" onClick="update/makePoll" margin="20">ارسال بازخورد</button>
    </frame>

    <frame padding_bottom="10"/>


    <footer background="#1E90FF">
        <frame layout="linear_vertical" background="#1E90FF" margin_left="-1" margin_right="-1" margin_top="-1"
               margin_bottom="-1" height="64">
            <frame layout="linear_horizontal" gravity="center">

                <frame layout="linear_vertical" background="#1E90FF" onclick="update/profile_info" gravity="center">

                    <image src="https://s2.uupload.ir/files/round_account_circle_white_24dp_fhxf.png"
                           borderCornerRadius="0" width="24" height="24" gravity="right" margin="0" padding="0"/>

                    <frame margin="0" padding="0">
                        <text textsize="12" gravity="center" textcolor="white" margin="0" padding="0">پروفایل</text>
                    </frame>
                </frame>

                <frame layout="linear_vertical" background="#1E90FF" onclick="update/polling" gravity="center">

                    <image src="https://s2.uupload.ir/files/round_poll_white_24dp_ysj.png" borderCornerRadius="0"
                           width="24" height="24" gravity="right" margin="0" padding="0"/>

                    <frame margin="0" padding="0">
                        <text textsize="12" gravity="center" textcolor="white" margin="0" padding="0">نظرسنجی</text>
                    </frame>
                </frame>


                <frame layout="linear_vertical" background="#1E90FF" onclick="update/home" gravity="center">

                    <image src="https://s2.uupload.ir/files/round_home_white_24dp_rq7x.png" borderCornerRadius="0"
                           width="24" height="24" gravity="right" margin="0" padding="0"/>

                    <frame margin="0" padding="0">
                        <text textsize="12" gravity="center" textcolor="white" margin="0" padding="0">خانه</text>
                    </frame>
                </frame>

            </frame>
        </frame>
    </footer>

</page>