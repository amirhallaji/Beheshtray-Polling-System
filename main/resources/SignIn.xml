<page title="بهشترأی" scrollable="true" toolbarColor="#1E90FF" statusbarColor="#4682B4" padding_top="64">

    <frame padding_bottom="10"/>

    <frame margin="center">
        <image src="https://s4.uupload.ir/files/artboard_1_vdwm.png" borderCornerRadius="120" width="128"
               height="128"/>
    </frame>

    <frame margin="center">
        <text textsize="24" textcolor="#3399ff" gravity="center">بهشترأی اپسان</text>
    </frame>

    <frame margin="center">
        <text textalignment="center" textcolor="#3399ff" textsize="14">سرویس نظرسنجی دانشگاه شهید بهشتی</text>
    </frame>

    {{#currentStudent}}
    <frame layout="linear_vertical" padding_bottom="100" width="280">
        <!--        <checkbox textsize="14" text="شرایط و ضوابط استفاده از بهشترأی را می‌پذیرم." margin_right="10"-->
        <!--                  margin_left="10"/>-->
        <button borderCornerRadius="100" background="#3399ff" textcolor="white" onclick="update/acceptConditions"
                id="signin_button" text="ورود با اپسان به عنوان: {{student_name}}">
        </button>
    </frame>
    {{/currentStudent}}

    <footer background="#1E90FF">
        <frame layout="linear_vertical" background="#1E90FF" margin_left="-1" margin_right="-1" margin_top="-1"
               margin_bottom="-1" height="64">
            <frame layout="linear_horizontal" gravity="center">

                <frame layout="linear_vertical" background="#1E90FF" onclick="command/help_sign_in_nav" gravity="center"
                       height="64">

                    <image src="https://s2.uupload.ir/files/round_info_white_24dp_j64w.png" borderCornerRadius="0"
                           width="24" height="24" gravity="right" margin="0" padding="0"/>

                    <frame margin="0" padding="0">
                        <text textsize="12" gravity="center" textcolor="white" margin="0" padding="0">راهنما</text>
                    </frame>
                </frame>

                <frame layout="linear_vertical" borderCornerRadius="20" background="#006AD1" onclick="command/sign_in_nav"
                       gravity="center" height="64">

                    <image src="https://s2.uupload.ir/files/round_login_white_24dp_afte.png" borderCornerRadius="0"
                           width="24" height="24" gravity="right" margin="0" padding="0"/>

                    <frame margin="0" padding="0">
                        <text textsize="12" gravity="center" textcolor="white" margin="0" padding="0">ورود</text>
                    </frame>
                </frame>


            </frame>
        </frame>
    </footer>


</page>



