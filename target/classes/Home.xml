<page title="بهشترأی" scrollable="true" toolbarColor="#1E90FF" statusbarColor="#4682B4" padding_top="64">

    <divider color="#1E90FF" size="2"/>

    <frame layout="linear_vertical">

        <frame layout="linear_horizontal">

            <frame gravity="left">
                <frame textcolor="#fff" background="#FFFAFA" gravity="center" id="" onClick="">
                    <text textsize="12" gravity="center" textcolor="#1E90FF">مشاهده همه</text>
                </frame>


                <frame gravity="right" width="500">
                    <text textsize="22" gravity="right">محبوب ترین اساتید هفته</text>
                </frame>
            </frame>
        </frame>
    </frame>


    <frame layout="linear_vertical" margin="0">

        <frame layout="linear_horizontal" margin="0" gravity="top">

            {{#teachers}}
            <frame layout="linear_vertical" background="#FFFAFA" onclick="update/teacherViewAllLessons+{{teacher_name}}" height="128">

                <frame width="64" height="64">
                    <image src="{{teacher_photo}}" borderCornerRadius="120" scaletype="center_crop"></image>
                </frame>
                <frame gravity="center">
                    <text textsize="10" gravity="center" text="{{teacher_name}}"/>

                </frame>

            </frame>
            {{/teachers}}


        </frame>


        <frame layout="linear_vertical">

            <frame layout="linear_horizontal">

                <frame gravity="left">
                    <frame textcolor="#fff" background="#FFFAFA" gravity="center" id="" onClick="">
                        <text textsize="12" gravity="center" textcolor="#1E90FF">مشاهده همه</text>
                    </frame>


                    <frame gravity="right" width="500">
                        <text textsize="22" gravity="right">محبوب ترین نظرات هفته</text>
                    </frame>


                </frame>
            </frame>

            <divider color="#DCDCDC" size="1"/>

            {{#feedbacks}}

            <frame background="#FFFAFA" onclick="update/big_comment_to_teacher+{{teacher_name}}%{{lesson_name}}">
                <frame layout="linear_vertical">

                    <frame layout="linear_horizontal">


                        <frame>

                            <frame>
                                <button gravity="center" onClick="update/upvote_comment_home+{{feedback_id}}" borderCornerRadius="100" background="#228B22"
                                        width="30" textcolor="white" textsize="14" height="40" text="{{upvotes}}" >
                                </button>
                            </frame>


                            <frame>
                                <button gravity="center" onClick="update/downvote_comment_home+{{feedback_id}}" borderCornerRadius="100" background="#FF0000"
                                        width="30" textcolor="white" textsize="14" height="40" text="{{downvotes}}">
                                </button>
                            </frame>

                        </frame>


                        <frame>
                            <text textalignment="right" gravity="right" width="60" textsize="12" text="نمره:{{student_score}}"></text>

                            <text textalignment="right" gravity="right" width="60" textsize="12" text="تاریخ ارسال نظر:{{date_number}}">
                                ۹/۹/۱۳۹۹
                            </text>

                        </frame>

                    </frame>

                    <frame layout="linear_horizental">
                        <frame gravity="right">
                            <text textalignment="right" textsize="14" gravity="left" textcolor="gray" text="استاد:{{teacher_name}}">
                            </text>
                        </frame>
                        <frame gravity="right">
                            <text textalignment="right" textsize="14" gravity="left" textcolor="gray" text="درس:{{lesson_name}}">
                            </text>
                        </frame>
                    </frame>

                    <frame gravity="right">
                        <text textalignment="right" textsize="16" gravity="left" text="{{extended_feedback}}">

                        </text>
                    </frame>
                </frame>
            </frame>
            <divider color="#DCDCDC" size="1"/>

            {{/feedbacks}}


