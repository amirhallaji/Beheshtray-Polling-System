<page title="بازخورد" scrollable="true" toolbarColor="#1E90FF" statusbarColor="#4682B4">

    {{#teachers}}
    <frame>
        <image src="https://uupload.ir/files/bn5f_photo_2021-01-24_20-57-28.jpg" borderCornerRadius="120" height="164"
               width="164"/>
    </frame>

    <frame>
        <text gravity="center" id="teacher_name" textsize="28" text="{{teacher_name}}" margin_bottom="0"/>
    </frame>

    <frame>
        <text gravity="center" id="lesson_name" text="{{lesson_name}}" textsize="14" textcolor="gray" margin_top="0"/>
    </frame>
    {{/teachers}}


    <frame layout="linear_horizontal">
        <frame height="20" width="20" background="#1E90FF" borderCornerRadius="120" borderColor="#1E90FF"
               borderStrokeWidth="0.5">
        </frame>

        <frame height="20" width="20" background="#FFFFFF" borderCornerRadius="120" borderColor="#1E90FF"
               borderStrokeWidth="0.5">
        </frame>

    </frame>


    <frame gravity="center">
        <text textsize="22" gravity="center">امتیاز دهید.</text>
    </frame>

    <frame layout="linear_vertical">

        <frame layout="linear_horizontal">

            <frame gravity="left" width="">
                <frame background="#FF8C00" gravity="left" borderCornerRadius="120">
                    <textInput hint=".../۱۰۰" textsize="12" id="right_legals" gravity="center" textcolor="black"/>
                </frame>


            </frame>


            <frame gravity="right" width="500">
                <text textsize="14" gravity="right">رعایت حقوق دانشجو و رفتار مناسب با آن‌ها</text>
            </frame>
        </frame>
    </frame>


    <frame layout="linear_vertical">

        <frame layout="linear_horizontal">

            <frame gravity="left" width="">
                <frame background="#FF8C00" gravity="left" borderCornerRadius="120">
                    <textInput hint=".../۱۰۰" textsize="12" id="transfer_content" gravity="center" textcolor="black"/>
                </frame>


            </frame>


            <frame gravity="right" width="500">
                <text textsize="14" gravity="right">میزان انتقال مطلب</text>
            </frame>
        </frame>
    </frame>


    <frame layout="linear_vertical">

        <frame layout="linear_horizontal">

            <frame gravity="left" width="">
                <frame background="#FF8C00" gravity="left" borderCornerRadius="120">
                    <textInput hint=".../۱۰۰" textsize="12" id="ta_team" gravity="center" textcolor="black"/>
                </frame>


            </frame>


            <frame gravity="right" width="500">
                <text textsize="14" gravity="right">تیم حل تمرین</text>
            </frame>
        </frame>
    </frame>


    <frame layout="linear_vertical">

        <frame layout="linear_horizontal">

            <frame gravity="left" width="">
                <frame background="#FF8C00" gravity="left" borderCornerRadius="120">
                    <textInput hint=".../۱۰۰" textsize="12" id="suitable_exercise" gravity="center" textcolor="black"/>
                </frame>


            </frame>


            <frame gravity="right" width="500">
                <text textsize="14" id="" gravity="right">متناسب بودن تکالیف</text>
            </frame>
        </frame>
    </frame>


    <frame padding_bottom="10"/>


    <button onClick="update/nextPage" borderCornerRadius="100" background="#1E90FF" width="120" textcolor="white"
            padding="50"
            textsize="14">بعدی
    </button>


    <frame padding_bottom="10"/>


</page>